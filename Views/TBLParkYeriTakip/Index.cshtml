@using MvcOtopark.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TBLParkYeriTakip>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Park Yeri Takip Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Park Yerleri</th>
        <th>Park Yeri Durum</th>
        @*<th>Sil</th>*@
        <th>Güncelle</th>
        <th>Sil</th>

    </tr>
    <tbody>
        @foreach (var takip in Model)
        {
            <tr>
                <th>@takip.ID</th>
                <td>@takip.ParkYerleri</td>
                <td>@takip.ParkYeriDurum</td>
                @*<td><a href="/TBLParkYeriTakip/Sil/@takip.ID" class="btn btn-danger">SİL</a></td>*@
                <td><a href="/TBLParkYeriTakip/ParkYeriGetir/@takip.ID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("Sil", "Sil", new { id = takip.ID }, new { @class = "btn btn-warning", onclick = "return confirm('Silmek İstediğinize Emin Misiniz?')" })</td>
            </tr>
        }
    </tbody>

</table>
@Html.PagedListPager((IPagedList)Model, sayfa =>Url.Action("Index" , new { sayfa }) )
<a href=" /TBLParkYeriTakip/YeniGiris/" class="btn btn-primary">YENİ GİRİŞ EKLE</a>



