@using MvcOtopark.Models.Entity
@model List<TBLParkBilgileri>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "TBLParkBilgileri", FormMethod.Get))
{
    <p>
        Aranacak Müşteri Adı @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}


<h2>Park Bilgileri Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Müşteri ID</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>Müşteri Telefon</th>
        <th>Marka ID</th>
        <th>Seri ID</th>
        <th>Model</th>
        <th>Renk</th>
        <th>Plaka</th>
        <th>Yıl</th>
        <th>Park Yeri ID</th>
        <th>Giriş Tarihi</th>
        <th>Çıkış Tarihi</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    <tbody>
        @foreach (var parkbilgileri in Model)
        {
        <tr>
            <th>@parkbilgileri.ID</th>
            <th>@parkbilgileri.MusteriID</th>
            <td>@parkbilgileri.Ad</td>
            <td>@parkbilgileri.Soyad</td>
            <td>@parkbilgileri.Telefon</td>
            <td>@parkbilgileri.MarkaID</td>
            <td>@parkbilgileri.SeriID</td>
            <td>@parkbilgileri.Model</td>
            <td>@parkbilgileri.Renk</td>
            <td>@parkbilgileri.Plaka</td>
            <td>@parkbilgileri.Yil</td>
            <td>@parkbilgileri.ParkYeriID</td>
            <td>@parkbilgileri.GirisTarihi</td>
            <td>@parkbilgileri.CikisTarihi</td>
            <td><a href="/TBLParkBilgileri/Sil/@parkbilgileri.ID" class="btn btn-danger">SİL</a></td>
            <td><a href="/TBLParkBilgileri/BilgiGetir/@parkbilgileri.ID" class="btn btn-success">GÜNCELLE</a></td>

        </tr>

        }
    </tbody>

</table>
<a href=" /TBLParkBilgileri/YeniBilgi/" class="btn btn-primary">YENİ BİLGİ EKLE</a>

